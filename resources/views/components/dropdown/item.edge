@if (type === 'button')
  <button @click="open = false; {{ onClick }}" class="w-full block px-4 py-2 text-sm leading-5 rounded-lg text-gray-700 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 dark:hover:bg-gray-900 dark:hover:bg-opacity-10 dark:text-gray-400 transition duration-150 ease-in-out {{ className }}">
    {{{ await $slots.main() }}}
  </button>
@else 
  <a href="{{ href }}" class="block px-4 py-2 text-sm leading-5 rounded-lg text-gray-900 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 dark:hover:bg-gray-900  dark:hover:bg-opacity-10 dark:text-gray-400 transition duration-150 ease-in-out {{ className }}">
    {{{ await $slots.main() }}}
  </a>
@endif